@page "/"
@namespace Silk.Dashboard.Pages
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@using Microsoft.AspNetCore.Mvc.TagHelpers
@using Silk.Extensions
@using Silk.Dashboard.Extensions
@using Silk.Dashboard.Models
@using Silk.Dashboard.Services

@{
    Layout = "_Layout";

    var userId = HttpContext.User.GetUserId();

    if (!string.IsNullOrEmpty(userId))
    {
        var tokenStorage = HttpContext.RequestServices.Get<DiscordTokenStore>();
        var token = await DiscordOAuthToken.FromHttpContext(HttpContext);
        tokenStorage!.SetToken(userId, token);
    }
}

<component type="@typeof(App)" render-mode="Server" />
