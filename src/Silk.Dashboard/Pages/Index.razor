<PageTitle>Index</PageTitle>

<MudContainer Class="my-15">
    <HeaderView Text="Welcome to Silk!" ImageUrl="@IconLink">
        <MudButton Class="my-8"
                   Color="Color.Success"
                   Variant="Variant.Filled"
                   Link="@InviteLink"
                   Target="_blank">
            Invite Me
        </MudButton>

        <MudText Class="text-white shades-text"
                 Color="Color.Surface"
                 Typo="Typo.h4">
            Meet my Creators
        </MudText>
    </HeaderView>

    <MudDivider Class="my-8"
                DividerType="DividerType.Middle" />

    <MudGrid>
        <MudItem xs="12">
            <MudGrid Spacing="4" Justify="Justify.Center">
                <CollectionView Data="@Owners">
                    <ItemTemplate>
                        <MudItem @key="@context">
                            <OwnerCardView Owner="@context" />
                        </MudItem>
                    </ItemTemplate>
                </CollectionView>
            </MudGrid>
        </MudItem>
    </MudGrid>
</MudContainer>

