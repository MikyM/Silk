@page "/about"

@using Silk.Dashboard.Models

<MudContainer>
    <MudText Class="text-white shades-text"
             Align="Align.Center"
             Color="Color.Surface"
             Typo="Typo.h3">
        Meet our Contributors!
    </MudText>

    <MudDivider Class="my-6"
                Style="height: 4px"
                DividerType="DividerType.Middle"/>

    <MudGrid>
        <MudItem xs="12">
            <MudGrid Spacing="4" Justify="Justify.Center">
                <CollectionView Data="@_contributors">
                    <ItemTemplate>
                        <MudItem @key="@context.Id">
                            <ContributorCardView Contributor="@context"/>
                        </MudItem>
                    </ItemTemplate>
                </CollectionView>
            </MudGrid>
        </MudItem>
    </MudGrid>
</MudContainer>

