@page "/about"

<MudContainer>
    <MudText Align="Align.Center"
             Typo="Typo.h3">
        Meet our Contributors!
    </MudText>

    <MudDivider Class="my-6"
                Style="height: 4px"
                DividerType="DividerType.Middle"/>

    @if (_contributors is null)
    {
        <LoadingView/>
    }
    else
    {
        <MudGrid>
            <MudItem xs="12">
                <MudGrid Spacing="4" 
                         Justify="Justify.Center">
                    <CollectionView Data="@_contributors">
                        <ItemTemplate>
                            <MudItem @key="@context.Id">
                                <ContributorCardView Contributor="@context"/>
                            </MudItem>
                        </ItemTemplate>
                    </CollectionView>
                </MudGrid>
            </MudItem>
        </MudGrid>
    }

</MudContainer>