@namespace Silk.Dashboard.Components

@using Silk.Dashboard.Models

<MudCard>
    <MudCardContent Class="d-flex flex-column align-center pa-2">
        <MudImage ObjectFit="ObjectFit.Contain"
                  Width="256"
                  Src="@Owner.ImageUrl"
                  Alt="@($"{Owner.Name}'s Avatar")"
                  Class="rounded mb-3"/>

        <MudText Typo="Typo.h5">
            @Owner.Name
        </MudText>

        <MudText Typo="Typo.subtitle1">
            @Owner.Description
        </MudText>
    </MudCardContent>
</MudCard>

@code {

    [Parameter]
    public SilkOwner Owner { get; set; }

}