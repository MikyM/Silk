@namespace Silk.Dashboard.Components

<MudContainer Class="d-flex flex-column align-center justify-space-between">
    @if (HasImage)
    {
        <MudImage ObjectFit="ObjectFit.Contain"
                  Width="256"
                  Src="@ImageUrl"
                  Alt="Image URL"
                  Elevation="1"
                  Class="rounded mb-3"/>
    }

    <MudText Class="text-white shades-text"
             Typo="Typo.h3">
        @Text
    </MudText>

    @ChildContent
</MudContainer>

@code {

    [Parameter]
    public string ImageUrl { get; set; }

    [Parameter]
    public string Text { get; set; }

    [Parameter]
    public RenderFragment ChildContent { get; set; }

    private bool HasImage => !string.IsNullOrEmpty(ImageUrl);
}