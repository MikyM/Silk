@namespace Silk.Dashboard.Components

<MudContainer Class="d-flex flex-column align-center justify-space-between">
    @if (HasImage)
    {
        <img class="img-fluid mb-2 rounded-circle" style="max-width: 256px;" src="@ImageUrl" alt="Avatar URL" />
    }

    <MudText Class="shades-text text-white" Typo="Typo.h3">
        @Text
    </MudText>

    @ChildContent
</MudContainer>

@code {

    [Parameter]
    public string ImageUrl { get; set; }

    [Parameter]
    public string Text { get; set; }

    [Parameter]
    public RenderFragment ChildContent { get; set; }

    private bool HasImage => !string.IsNullOrEmpty(ImageUrl);
}