@namespace Silk.Dashboard.Components

<MudContainer Class="@Class" Style="@Style">
    @if (Content is null)
    {
        <MudText Class="mb-2">Loading...</MudText>
        <MudProgressCircular Size="Size.Medium" Indeterminate="true"/>
    }
    else
    {
        @Content
    }
</MudContainer>
 
@code {

    [Parameter]
    public string Class { get; set; } = "d-flex flex-column align-center justify-center mud-height-full";

    [Parameter]
    public string Style { get; set; } = "";

    [Parameter]
    public RenderFragment Content { get; set; }

}