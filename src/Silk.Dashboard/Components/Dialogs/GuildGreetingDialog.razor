@using Silk.Data.DTOs.Guilds.Config

<MudDialog>
    <DialogContent>
        <GuildGreetingEditor Greeting="Greeting"
                             OnSubmit="Close"
                             OnCancel="Cancel"/>
    </DialogContent>
</MudDialog>

@code {

    [CascadingParameter]
    MudDialogInstance MudDialog { get; set; }

    [Parameter]
    public int GreetingId { get; set; }

    [Parameter]
    public GuildGreeting Greeting { get; set; }

    void Close() => MudDialog.Close(DialogResult.Ok(true));
    void Cancel() => MudDialog.Cancel();

}