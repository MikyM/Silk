@using Silk.Data.Entities

<MudDialog>
    <DialogContent>
        <GuildGreetingEditor GreetingId="GreetingId"
                             Greeting="Greeting"
                             OnSubmit="Close"
                             OnCancel="Cancel"/>
    </DialogContent>
</MudDialog>

@code {

    [CascadingParameter]
    MudDialogInstance MudDialog { get; set; }

    [Parameter]
    public int GreetingId { get; set; }

    [Parameter]
    public GuildGreetingEntity Greeting { get; set; }

    void Close() => MudDialog.Close(DialogResult.Ok(true));
    void Cancel() => MudDialog.Cancel();

}