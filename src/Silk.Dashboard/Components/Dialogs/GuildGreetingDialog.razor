@using Silk.Data.DTOs.Guilds.Config
@using Remora.Results

<MudDialog>
    <DialogContent>
        <GuildGreetingEditor Greeting="Greeting"
                             OnSubmit="Submit"
                             OnCancel="Cancel" />
    </DialogContent>
</MudDialog>

@code {

    [CascadingParameter]
    MudDialogInstance MudDialog { get; set; }

    [Parameter]
    public GuildGreeting Greeting { get; set; }

    void Cancel() => MudDialog.Cancel();

    private void Submit(Result<GuildGreeting> result)
    {
        if (result.IsDefined(out _)) 
            MudDialog.Close(result);
    }

}