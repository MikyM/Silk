@namespace Silk.Dashboard.Components

<MudContainer Class="d-flex flex-column align-center justify-center"
              Style="height: 100%">
    <MudImage ObjectFit="ObjectFit.Contain"
              Width="256"
              Src="@ImageUrl"
              Alt="Issue Image"
              Elevation="1"
              Class="rounded"/>

    <MudText Class="my-3" Typo="Typo.h4">
        @Message
    </MudText>

    @ChildContent
</MudContainer>

@code {

    [Parameter]
    public string Message { get; set; } = "We don't know what went wrong, but lets pretend we do";

    [Parameter]
    public string ImageUrl { get; set; } = "imgs/rp_flop.png";

    [Parameter]
    public RenderFragment ChildContent { get; set; }

}