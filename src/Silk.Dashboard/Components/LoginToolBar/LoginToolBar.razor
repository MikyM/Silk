@namespace Silk.Dashboard.Components

@using Silk.Dashboard.Extensions

<AuthorizeView>
    <Authorized>
        <MudButtonGroup OverrideStyles="false">
            <MudButton Variant="Variant.Text"
                       Href="profile">
                @context.User.Identity?.Name
            </MudButton>

            <MudButton Variant="Variant.Text"
                       Href="api/account/logout">
                Logout
            </MudButton>
        </MudButtonGroup>
    </Authorized>
    <NotAuthorized>
        <MudButton Variant="Variant.Text"
                   Href="api/account/login">
            Login
        </MudButton>
    </NotAuthorized>
</AuthorizeView>