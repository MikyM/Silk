@namespace Silk.Dashboard.Components

<MudAppBar Style="background-color: #25292c"
           Color="Color.Transparent"
           Fixed="false"
           Elevation="2"
           Dense="false">

    <MudButtonGroup OverrideStyles="false">
        <MudButton Href="/"
                   Variant="Variant.Text">
            <MudImage Class="mr-3"
                      Src="@IconLink"
                      ObjectFit="ObjectFit.Contain"
                      ObjectPosition="ObjectPosition.Center"
                      Width="35"/>
            Home
        </MudButton>

        <MudButton Size="Size.Large"
                   Variant="Variant.Text"
                   Href="/about">
            About
        </MudButton>

        <MudButton Variant="Variant.Text"
                   Href="@GithubLink"
                   Target="_blank">
            Github
        </MudButton>

        <MudButton Variant="Variant.Text"
                   Href="@InviteLink"
                   Target="_blank">
            Invite Me
        </MudButton>
    </MudButtonGroup>

    <MudSpacer/>

    <LoginToolBar/>
</MudAppBar>